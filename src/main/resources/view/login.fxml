<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="250" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.daniel_carlos.desenvolv_sist.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="20">
            <children>
                <Label style="-fx-font-size: 20px;" text="Login" />
                <TextField fx:id="txtEmail" promptText="Email" />
                <PasswordField fx:id="txtSenha" promptText="Senha" />
            <Button fx:id="btnEntrar" text="Entrar" />
                <Button fx:id="btnFechar" text="Fechar" />
                <Label fx:id="lblMensagem" textFill="red" />
            </children>
        </VBox>
    </children>
</AnchorPane>
